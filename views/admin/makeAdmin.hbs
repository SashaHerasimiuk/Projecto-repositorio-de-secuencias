<!DOCTYPE html>
<html>
<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<title>Make admin</title>
</head>
<body>
	<div>
		<table>
			<thead>
				<th>User</th>
				<th>Email</th>
				<th>Admin</th>
				<th>Make admin/Revoke admin</th>
			</thead>
			<tbody>
				{{#each user}}
				<tr>
					<td>{{username}}</td>
					<td>{{email}}</td>
					<td>{{#if admin}}
							Yes
						{{else}}
							No
						{{/if}}
					</td>
					<td>
						<form method="post" action="/admin/makeAdmin/makeAdmin">
							<input type="hidden" name="username" value="{{username}}">
							<input type="hidden" name="adminStatus" value="{{#if admin}}true{{else}}false{{/if}}">
							<button type="submit">Make/Revoke</button>
						</form>
					</td>
				</tr>
				{{/each}}

			</tbody>
		</table>
	</div>
	<div>
		<a href="./connected">Back</a>
	</div>
</body>
</html>